<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.example.assistive_reader"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".reader"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Take_input"
			android:label="Enter the text to read"
			android:theme="@android:style/Theme.Dialog"
			android:windowSoftInputMode="stateVisible">			
		</activity>
		<activity android:name=".Take_file"
			android:label="Enter a name for future reference"
			android:theme="@android:style/Theme.Dialog"
			android:windowSoftInputMode="stateVisible">			
		</activity>
		<activity android:name=".List_view"
			android:label="Choose File"
			android:theme="@android:style/Theme.Dialog">			
		</activity>

    </application>
    <uses-sdk android:minSdkVersion="3" />

</manifest> 